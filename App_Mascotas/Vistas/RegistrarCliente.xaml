<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App_Mascotas.Vistas.RegistrarCliente">
    <ContentPage.Content>
        <StackLayout>
            <Entry x:Name="txtCedula" Placeholder="Ingrese Cedula" Keyboard="Numeric" />
            <Entry x:Name="txtNombres" Placeholder="Ingrese Nombres" />
            <Entry x:Name="txtApellidos" Placeholder="Ingrese Apellidos" />
            <Label Text="Escoja Fecha" FontSize="Small" FontAttributes="Italic" />
            <DatePicker x:Name="dtFecha" Format="MMM dd, yyyy" DateSelected="dtFecha_DateSelected" />
            <Entry x:Name="txtFecha" Placeholder="Escoja Fecha" IsEnabled="False" />
            <Entry x:Name="txtDireccion" Placeholder="Ingrese Direccion" />
            <Entry x:Name="txtEmail" Placeholder="Ingrese Email" Keyboard="Email" />
            <Button x:Name="btnAgregar" Clicked="btnAgregar_Clicked" />
            <Button x:Name="btnEliminar" Text="Eliminar" Clicked="btnEliminar_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>